<body>
  <!-- Navigation Bar -->
  <div
    class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom deep-shadow fixed-top">
    <img class="my-0 mr-md-auto font-weight-normal" width="150" alt="DC Adopt logo" src="/images/logo.png"></img>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="#">Home</a>
      <a class="p-2 text-dark" href="/savedpets">Saved Pets</a>
      {{#if loggedIn}}
      <a class="btn btn-outline-danger p-2" href="#">Log Out</a>
      {{else}}
      <a class="btn btn-outline-secondary p-2" href="/signup">Sign up</a>
      <a class="btn btn-outline-primary p-2" href="/login">Log In</a>
      <a class="btn btn-outline-secondary p-2" href="/newpet">Add Pet</a>
      {{/if}}
    </nav>

  </div>
