  <section class="bgimage">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h5>Happy home for a pet is a happy home for you!</h5>
        </div>
      </div>
    </div>
  </section>
  <section class="bg-light">
