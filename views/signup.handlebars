<div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
  
      <!-- Icon -->
      <div class="fadeIn first pt-4">
        <img src="/images/logo.png" id="icon" alt="User Icon" />
      </div>
  
      <!-- Signup Form -->
      <form id="signup-form">
        <input type="text" id="username-signup" class="fadeIn second" name="username" placeholder="Create a username">
        <input type="email" id="user-email" class="fadeIn second" name="email" placeholder="Enter your email">
        <input type="text" id="password" class="fadeIn third" name="password" placeholder="Create a password">
        <input value="signup" type="submit" class="fadeIn fourth pt-4">
      </form>
  
      <!-- Remind Passowrd -->
      <div id="formFooter">
        <a class="underlineHover" href="/login">Already have an account? Sign In</a>
      </div>
  
    </div>
</div>
<script src="/js/signup.js"></script>
